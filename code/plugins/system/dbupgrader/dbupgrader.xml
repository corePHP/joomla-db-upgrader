<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="system" method="upgrade">
	<name>plg_system_dbupgrader</name>
	<version>1.0</version>
	<creationDate>September 2011</creationDate>
	<author>Rafael Corral</author>
	<authorEmail>support@corephp.com</authorEmail>
	<authorUrl>http://www.corephp.com</authorUrl>
	<copyright>2010 'corePHP' LLC, All rights reserved</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_SYSTEM_DBUPGRADER_XML_DESCRIPTION</description>

	<files>
		<filename plugin="dbupgrader">dbupgrader.php</filename>
		<folder>tables</folder>
		<folder>sql</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_dbupgrader.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_dbupgrader.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field	name="dodefault" type="radio"
					default="0"
					description="PLG_SYSTEM_DBUPGRADER_DODEFAULT_DESC"
					label="PLG_SYSTEM_DBUPGRADER_DODEFAULT_LABEL"
					>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>